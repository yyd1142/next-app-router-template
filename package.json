{
  "name": "next-app-router-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean:node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:next-cache": "find . -name '.next' -type d -prune -exec rm -rf '{}' +",
    "clean": "pnpm clean:node-modules & pnpm clean:next-cache",
    "re-install": "pnpm clean & pnpm i",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ocloud/shop-nextjs-config": "^1.0.3",
    "next": "14.1.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.0.3",
    "@ocloud/shop-commitizen-config": "^1.0.1",
    "@ocloud/shop-commitlint-config": "^1.0.1",
    "@ocloud/shop-eslint-config": "1.0.0",
    "@ocloud/shop-prettier-config": "^1.0.1",
    "@ocloud/shop-stylelint-config": "^1.0.1",
    "@ocloud/shop-ts-config": "^1.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "pnpm@7.14.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --check"
    ],
    "styled.{ts,tsx}": [
      "stylelint --fix"
    ]
  }
}
